<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="550.0" prefWidth="550.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.albinodevelopment.View.NewFunctionWindow">
    <children>
        <VBox prefHeight="550.0" prefWidth="550.0">
            <children>
                <Label text="NEW FUNCTION" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="42.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                    <children>
                        <Label text="Function Title" textAlignment="CENTER">
                            <font>
                                <Font name="System Bold" size="36.0" />
                            </font>
                        </Label>
                        <TextField fx:id="functionNameTF" prefHeight="50.0" prefWidth="200.0" promptText="A name for your function" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="92.0" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                    <children>
                        <Label text="Function Limit ($)" textAlignment="CENTER">
                            <font>
                                <Font name="System Bold" size="36.0" />
                            </font>
                        </Label>
                        <TextField fx:id="functionLimitTF" prefHeight="50.0" prefWidth="200.0" promptText="Leave blank for no limit" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="222.0" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                    <children>
                        <Button fx:id="openDrinksListButton" mnemonicParsing="false" onAction="#handleOpenDrinksListButton" prefHeight="70.0" prefWidth="225.0" text="Select Drinks List">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Button>
                        <Label fx:id="selectedDrinksList" maxWidth="300.0" textAlignment="CENTER" wrapText="true">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="202.0" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                    <children>
                        <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancelButton" prefHeight="70.0" prefWidth="225.0" text="Cancel">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Button>
                        <Button fx:id="submitButton" mnemonicParsing="false" onAction="#handleSubmitButton" prefHeight="70.0" prefWidth="225.0" text="Submit">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>
                <Label fx:id="output" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
