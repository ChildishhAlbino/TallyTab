<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane id="AnchorPane" prefHeight="720" prefWidth="1280" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.albinodevelopment.View.MainWindow">
    <children>
        <MenuBar layoutY="1.0" prefHeight="27.0" prefWidth="1280.0">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleNewButton" text="New" />
                        <MenuItem mnemonicParsing="false" onAction="#handleOpenButton" text="Open" /> 
                        <MenuItem mnemonicParsing="false" onAction="#handleSaveButton" text="Save" /> 
                        <MenuItem mnemonicParsing="false" onAction="#handleCloseButton" text="Close" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Drinks List" />
                        <MenuItem mnemonicParsing="false" text="Preferences" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <TabPane fx:id="tabPane" layoutY="28.0" prefHeight="692.0" prefWidth="1280.0" />
    </children>
</AnchorPane>
